@model List<GMarket.Domain.ViewModels.ProductViewModel>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Товары";
}

<div class="container-list-products">
    <div class="link-page">
        <a href="/Home/Index/">Главная</a> > <a href="/Categories/ListOfCategories">Категории</a> > Товары
    </div>
    <div class="container-filter-products">
        <div class="filter">
            <h3>Фильтр</h3>
            <div class="price-filter">
                <label class="title">Цена:</label>
                
                <span id="adult-min-label">0</span>
                <label>Минимальная цена:</label>
                <input type="range" id="adult-min-price" min="0" max="5000" value="0"/>

                <span id="adult-max-label">0</span>
                <label>Максимальная цена:</label>
                <input type="range" id="adult-max-price" min="0" max="5000" value="2000"/>
                
                <div>Текущие значения:<span id="adult-price-values">0 - 2000</span></div>
            </div>
            <div class="brand-type">
                <label class="title">Бренд:</label>
                <div>
                    <input type="checkbox" id="brand-type-1" value="Yato" class="custom-checkbox"/>
                    <label for="brand-type-1">Yato</label>
                </div>
                <div>
                    <input type="checkbox" id="brand-type-2" value="PowerAction" class="custom-checkbox"/>
                    <label for="brand-type-2">Power Action</label>
                </div>
                <div>
                    <input type="checkbox" id="brand-type-3" value="MosaicAgro" class="custom-checkbox"/>
                    <label for="brand-type-3">Мозаик Агро</label>
                </div>
                <div>
                    <input type="checkbox" id="brand-type-4" value="Aelita" class="custom-checkbox"/>
                    <label for="brand-type-4">Аэлита</label>
                </div>
            </div>
            <div class="filter-button">
                <button id="apply-filter">Применить фильтр</button>
            </div>
        </div>
        

        <div class="container-products" style="width: 80%">
            <div class="sorts">
                <label for="sort-options">Сортировать по:</label>
                <select id="sort-options">
                    <option value="">Выберите...</option>
                    <option value="price-adult-asc">Цена (по возрастанию)</option>
                    <option value="price-adult-desc">Цена (по убыванию)</option>
                    <option value="stars-asc">Рейтинг (по возрастанию)</option>
                    <option value="stars-desc">Рейтинг (по убыванию)</option>
                </select>
            </div>
            
            <div class = "list-products">
                @foreach (var item in Model)
                {
                    <div class="product-item">
                        <img src="@item.Image" class="item-product-image"/>
                        <div class="item-info">
                            <h2>@item.Name</h2>
                            <h6 class="price">Цена: @item.Price RUB</h6>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>