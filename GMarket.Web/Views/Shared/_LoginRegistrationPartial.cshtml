
<div class = "container-login-registration" style="display: none;">
    <div class = "block-container">
        <div class="block">
            <section class="block_item block-item">
                
                <h2 class="block-item_title">У вас уже есть аккаунт?</h2>
                <button class="block-item_btn signin-btn">Войти</button>
                
            </section>

            <section class="block_item block-item">
                
                <h2 class="block-item_title">У вас нет аккаунта?</h2>
                <button class="block-item_btn signup-btn">Зарегистрироваться</button>
                
            </section>
            
            <div class="form-box">
                <form class="form form_signup">
                    <h3 class="form_title">Регистрация</h3>
                    <label>
                        <input  id="signup_login" type="text"/>
                        <span>Логин</span>
                    </label>
                    <label>
                        <input id="signup_email" type="text"/>
                        <span>Почта</span>
                    </label>

                    <label>
                        <input id="signup_password" type="password"/>
                        <span>Пароль</span>
                    </label>

                    <label>
                        <input id="signup_confirm_password" type="password"/>
                        <span>Подтвердите пароль</span>
                    </label>
                    <div class="form-btn-container">
                        <div class="form-btn form_btn_signup">Зарегистрироваться</div>
                        <a class="google"><img src="img/google.svg" alt=""/></a>
                    </div>
                    
                    <div id="error-messages-signup"></div>
                </form>
                <form class="form form_signin">
                    <h3 class="form_title">Вход</h3>

                    <label>
                        <input id="signin_email" type="text"/>
                        <span>Почта</span>
                    </label>

                    <label>
                        <input id="signin_password" type="password"/>
                        <span>Пароль</span>
                    </label>

                    <div class="form-btn-container">
                        <div class="form-btn form_btn_signin">Войти</div>
                        <a class="google"><img src="img/google.svg" alt=""/></a>
                    </div>
                    <div id="error-messages-signin"></div>
                </form>
            </div>
        </div>
        
    </div>
    
    <div class="overlay"></div>
</div>